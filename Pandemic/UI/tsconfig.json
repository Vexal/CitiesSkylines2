{
	"compilerOptions": {
		"jsx": "react-jsx",
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"isolatedModules": true,
		"strict": false,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": "src",
		"skipLibCheck": true,
		"allowJs": true,
		"typeRoots": [ "./types" ],
		"resolveJsonModule": true,
		"paths": {
			"mod.json": [ "../mod.json" ]
		}
	},
} 
